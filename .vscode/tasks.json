{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "process",
            "label": "C/C++: build",
            "command": "gcc",
            "args": [
                "-g",
                "-std=c11",
                "-lm",
                "-Iheader",
                "-Iheader/adt",
                "${workspaceFolder}/src/*.c",
                "${workspaceFolder}/src/adt/*.c",
                "-o",
                "${workspaceFolder}/bin/main",
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: gcc"
        },
    ]
}